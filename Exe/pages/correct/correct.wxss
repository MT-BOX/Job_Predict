/* pages/correct/correct.wxss */
page{
    font-size: 32rpx;
  }
  .title{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    color: rgb(252, 194, 5);
    font-size: 60rpx;
    margin-bottom: 20px;
    margin-top: 20px;
}
  .section{
    display: flex;
    flex-direction: row;
    padding: 40rpx;
    border-bottom: 1px solid gray;
  }
  .section:last-child{
    border: none;
  }
  .section-title{
    width: 20%;
    float: left;
  }
  label{
    padding: 0 20rpx;
  }

  /* 下拉框 */
.select_box {
    background: #fff;
    width: 620rpx;
    /* margin: 0 auto; */
    height: 50rpx;
    line-height: 90rpx;
    text-align: left;
    position: relative;
  }
  
  .select {
    box-sizing: border-box;
    width: 100%;
    height: 50rpx;
    /* border: 1px solid #efefef; */
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
  }
  
  .select_text {
    flex: 1;
    color: rgb(102, 102, 102);
    line-height: 86rpx;
    height: 86rpx;
  }
  
  .option_box {
    position: absolute;
    top: 86rpx;
    width: 100%;
    /* border: 1px solid #efefef; */
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
    z-index: 100;
  }
  
  .option {
    display: block;
    line-height: 40rpx;
    border-bottom: 1px solid #efefef;
    padding: 10rpx;
    color: rgb(102, 102, 102);
  }
<!--pages/single/single.wxml-->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='mess'>
      <view class='it'>
      <text class='le'>账号：</text><text class='right'>{{myinfo.phone}}</text>
      </view>
      <view class='it'>
      <text class='le'>姓名：</text><text class='right'>{{myinfo.name}}</text>
      </view>
    </view>
    <view class='correct'>
        <text class='cr' bindtap="correct" >修改资料</text>
    </view>
  </view>
    <view class="divLine"></view>
    <view class='item'>
     <text class='left'> 性别：</text><text class='right'>{{myinfo.sex}}</text>
    </view>
    <view class="divLine"></view>
    <view class='item'>
      <text class='left'>年龄：</text><text class='right'>{{myinfo.age}}</text>
    </view>
    <view class="divLine"></view>
    <view class='item'>
      <text class='left'>学历：</text><text class='right'>{{myinfo.education}}</text>
    </view>
    <view class="divLine"></view>
    <view class='item'>
     <text class='left'> 邮箱：</text><text class='right'> {{myinfo.email}}</text>
    </view>
    <view class="divLine"></view>
    <view class='item' bindtap='resetpwd'>
     <text class='left'> 密码：</text><text class='right'>重置</text>
    </view>
    <view class="divLine"></view>
    <view class='buttt'>
      <button class='lgouut' type='warn' bindtap='exit'> --退出登录-- </button>
    </view>
</view>

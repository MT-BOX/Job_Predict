/* pages/single/single.wxss */
.nav{
    display: flex;
    background-color: rgba(36, 243, 233, 0.63);
    flex-direction: row;
}
.top{
  border-radius: 50%;
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: flex-start;
  margin-left: 20rpx;
  margin-top: 15rpx;
}
.nickname{
  display: flex;
  justify-content: flex-start;
  margin-left: 50rpx;
}
.item{
  height: 70rpx;
  background-color: #fff;
  margin: 20rpx;
  display: flex;
  border-radius: 20rpx;
}

.it{
    height: 50rpx;
    margin: 20rpx;
    margin-top: 30rpx;
    display: flex;
    color: #2d9b29;
    border-radius: 20rpx;
    font-size:12px
}

.correct{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 80rpx;
    color: rgb(230, 123, 23);
    font-size:15px
}
.divLine{
    background: #E0E3DA;
    width: 100%;
    height: 1rpx;
}
   
.left{
  display: flex;
  justify-content: flex-start;
  flex-grow: 1;
  color: #413c3c91;
}

.right{
  display: flex;
  justify-content: flex-end;
  color: #000000;
  margin-left: 10rpx;
}

.lgouut { 
    display: flex;
    justify-content: center;
    border-radius:10px;
    align-items: center;
    font-size:20px
   }